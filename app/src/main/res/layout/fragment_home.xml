<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252323">

    <ImageButton
        android:id="@+id/imageButtonProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:background="#252323"

        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <Button
            android:id="@+id/imageButtonMatrix"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="სამატრიცე"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/imageButtonVector"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="ვექტორები"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/imageButtonFormulas"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="010"
            android:textStyle="bold" />

        <Button
            android:id="@+id/imageButtonBinary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="History"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SolvEM"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>