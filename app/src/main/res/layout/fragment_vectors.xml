<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252323">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonGoToCross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ვექტორული" />

        <Button
            android:id="@+id/buttonGoToDot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="სკალარული" />

        <Button
            android:id="@+id/buttonGoToM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="შერეული" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonGoToCos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="კოსინუსი" />

        <Button
            android:id="@+id/buttonGoToSin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="სინუსი" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ვექტორები"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>