<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTextForgotPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252323">

    <EditText
        android:id="@+id/editTextTextEmailReset"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="შეიყვანეთ იმეილი
    რომელზეც გამოიგზავნება პაროლის აღდგენის ინსტრუქცია "
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonForgotPasswordEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailReset" />
</androidx.constraintlayout.widget.ConstraintLayout>